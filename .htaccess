# Bloquear cualquier acceso a archivos .env
<FilesMatch "^\.env(\..*)?$">
  Require all denied
</FilesMatch>

<IfModule mod_rewrite.c>
  RewriteEngine On

  # Si la petición es a un directorio sin trailing slash, redirige agregándole la barra final
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^(.+[^/])$ /$1/ [R=301,L]

  # Si el archivo o directorio solicitado existe, lo sirve directamente
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Por defecto, redirige a /index.html
  RewriteRule . /index.html [L]
</IfModule>
